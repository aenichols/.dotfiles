#!/usr/bin/env bash

# stow it
export STOW_FOLDERS="bin,nvim,tmux,uwuntu,i3,zsh,xkb,bash,git,ideavim,lazygit"

startWork() {
    $HOME/AppData/Local/Programs/Opera/opera.exe &
    #$HOME/AppData/Local/Microsoft/Teams/Update.exe --processStart "Teams.exe" &
    "/C/Program Files/Microsoft Office/root/Office16/Outlook.exe" &
    nohup $HOME/AppData/Local/Obsidian/Obsidian.exe &
}

startMongo() {
    sudo systemctl start mongod
    sudo systemctl enable mongod
}

increaseWatchers() {
    sudo sysctl fs.inotify.max_user_watches=65536
    sudo sysctl -p
}

#change_background() {
#    #dconf write /org/mate/desktop/background/picture-filename "'$HOME/dotfiles/backgrounds/$(ls ~/dotfiles/backgrounds | fzf)'"
#}

die () {
    echo >&2 "$@"
    exit 1
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin main
    popd
}

man() {
    VAR1="http://man.he.net/?topic="
    VAR2=$1
    VAR3="&section=all"
    VAR4="$VAR1$VAR2$VAR3"
    curl -v --silent "$VAR4" 2>&1 | sed -n "/<PRE>/,/<\/PRE>/p"
}

setFavAnimoos() {
  pushd $DOTFILES
  rm -rf $HOME/.dotfiles-windows/rooster/main_animoos/*
  python -m dploy stow $HOME/.dotfiles-windows/rooster/animoos/fav_animoos $HOME/.dotfiles-windows/rooster/main_animoos
  popd
}

setAnimoos() {
  pushd $DOTFILES
  rm -rf $HOME/.dotfiles-windows/rooster/main_animoos/*
  python -m dploy stow $HOME/.dotfiles-windows/rooster/animoos $HOME/.dotfiles-windows/rooster/main_animoos
  popd
}

gitBranchClean() {
    git fetch --prune origin
    git branch -l 'AN/*' | sed 's/\*//g' | sed 's/\//\\\\\\\\\//g' | xargs | sed 's/ /|/g' | xargs -I@@ bash -c 'git branch -rl "origin/AN/*" | sed -E -e "/@@$/d"' | sed 's/origin\///g' | xargs -I{} echo 'git push origin --delete {}'
    read -n1 -s -r -p $'Are you sure you wish to delete these remote branches...[N]y\n' key
    if [[ $key == 'y'  ]] || [[ $key == 'Y' ]]; then
        git branch -l 'AN/*' | sed 's/\*//g' | sed 's/\//\\\\\\\\\//g' | xargs | sed 's/ /|/g' | xargs -I@@ bash -c 'git branch -rl "origin/AN/*" | sed -E -e "/@@$/d"' | sed 's/origin\///g' | xargs -I{} git push origin --delete {}
    else
        echo Finished without deleting.
    fi
}

listEnv() {
    echo addToPath
    echo addToPathFront
    echo commitDotFiles
    echo die
    echo gitBranchClean
    echo increaseWatchers
    echo man
    echo setAnimoos
    echo setFavAnimoos
    echo startMongo
    echo startWork
    echo
    echo ID="$HOME/work/Identity/src/Identity.Server"
    echo AU="$HOME/work/ConnectBooster/ConnectBooster.Frontend"
    echo QP="$HOME/work/QuickerPay/Source"
    echo CLI="$HOME/work/mycli"
}
